<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screens.GeneralListActivity"
    tools:showIn="@layout/activity_general_list"
    android:background="@drawable/home_gradient">

    <RelativeLayout
        android:id="@+id/rl_general_list"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_5"
        android:layout_height="match_parent">

        <android.support.v7.widget.SearchView
            android:id="@+id/sv_general_list"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_alignParentStart="true"
            app:queryHint="@string/PujaSearchHint"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_general_list"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_below="@+id/sv_general_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>